<div class="text-center">
  <h1><%= @user.name %></h1>

  <div class="text-center">
    <%= avatar(@user) %>
  </div>

  <% if @user == current_user %>
    <p class="mt-2">

      <%= link_to t("user.show.button"), edit_user_path(@user),
                  class: "btn btn-primary" %>

    </p>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t("user.show.organized") %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="mt-3"><%= t("user.show.null-state") %></p>
      <% end %>
    </div>
  </div>

</div>

