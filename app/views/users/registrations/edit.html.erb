<h2><% t("user.registrations.edit.header") %></h2>

<div class="row">
  <div class="col-sm-10 col-md-5 col-lg-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group mt-3">
        <%= f.label :password %> <i>(<%= t("user.registrations.edit.password.prompt") %>)</i><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group mt-1">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group mt-4">
        <%= f.label :current_password %> <i>(<%= t("user.registrations.edit.password.prompt-confirm") %>)</i><br/>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group mt-4">
        <%= f.submit t("user.registrations.edit.button.update"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<%= link_to t("user.registrations.edit.button.back"), :back %>

<p class="mt-3"> <%= button_to t("user.registrations.edit.button.delete_account"), registration_path(resource_name),
                          data: { confirm: "Are you sure?" }, method: :delete,
                          class: "btn btn-sm btn-danger" %></p>


