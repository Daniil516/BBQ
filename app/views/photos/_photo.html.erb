<h2 class="mt-5 text-center"><%= t("events.show.photos") %></h2>

<div class="my-2 text-center">
  <div class="mt-3 mb-1">
    <%= event_photo(photo.source) %>
  </div>
  <span class="me-3">
    <%= t("events.show.uploaded_by") %> <%= render partial: 'users/user', object: photo.event.user %>
  </span>
  <% if current_user == photo.event.user %>
    <%= link_to fa_icon("trash-can"), event_photo_path(photo.event, photo),
                class: "icon-cog", method: :delete,
                data: { confirm: t('events.show.photo.delete-confirm') } %>
  <% end %>
</div>
