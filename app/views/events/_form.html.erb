<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="alert alert-warning alert-dismissible fade show" role="alert">
      <h2><%= event.errors.count.to_s + " " +
                I18n.t("events.form.error.word", count: event.errors.count) + " " +
                t("events.form.error.message") %>
      </h2>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-2">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mt-2">
    <%= form.label :address %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="mt-2">
    <%= form.label :datetime %>
    <p><%= form.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="mt-2">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mt-2">
    <%= form.submit t("events_form.Save-button"), class: 'btn btn-primary' %>
    <%= link_to t("events_form.back-button"), :back %>
  </div>
<% end %>
